<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".detailActivity">



    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tooleBarDn"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/white">

    </androidx.appcompat.widget.Toolbar>



    <TextView
        android:id="@+id/TitleOfNoteDn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:hint="Enter Title Here"
        android:layout_below="@+id/tooleBarDn"
        />
    <TextView
        android:id="@+id/contentOfNoteDn"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:hint="Enter your content here"
        android:layout_below="@+id/TitleOfNoteDn"
        android:gravity="top"
        android:textColor="@color/purple_700"
        android:padding="20dp"
        />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/editnote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="28dp"
        android:layout_marginBottom="40dp"
        android:backgroundTint="@color/black"
        android:src="@drawable/ic_baseline_save"
        app:backgroundTint="@color/black"
        app:maxImageSize="30dp" />

</RelativeLayout>